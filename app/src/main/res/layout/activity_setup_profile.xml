<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
>
    <include layout="@layout/trans_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tell_us_about_yourself"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_very_large"
            android:text="@string/about_me"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etAbout"
            style="@style/EditTextStyle_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColorHint="@android:color/transparent"
            android:hint="@string/about_me"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxlarge"
            android:text="@string/what_makes_you_smile"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etHappy"
            style="@style/EditTextStyle_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/transparent"
            android:hint="@string/what_makes_you_smile"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|end">

            <include layout="@layout/white_fab" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
