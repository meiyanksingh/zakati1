<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:rsb="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="zakati.app.com.zakati.fragments.TrackFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/range"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/_1_10_hrs" />

        </LinearLayout>

        <zakati.app.com.zakati.views.rangeSeekbar.RangeSeekBar
            android:id="@+id/range_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            rsb:activateOnDefaultValues="true"
            rsb:activeColor="@color/light_blue"
            rsb:barHeight="4dp"
            rsb:defaultColor="@color/grey"
            rsb:extraTextAvailable="true"
            rsb:showLabels="false"
            rsb:singleThumb="false"
            rsb:textAboveThumbsColor="@color/grey" />


        <TextView
            android:id="@+id/duration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_filter"
            android:text="2017" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/funds_donated"
                android:textSize="@dimen/text_size_normal" />

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_funds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1st Month - $ 4,200" />
                    </LinearLayout>

                    <include layout="@layout/divider_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total" />

                        <TextView
                            android:id="@+id/total_funds"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="$5,000" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_funds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_donated"
                android:textSize="@dimen/text_size_normal" />

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="240 Hrs" />
                    </LinearLayout>

                    <include layout="@layout/divider_grey" />


                    <TextView
                        android:id="@+id/total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="320 Hrs" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_funds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyle_no_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="-12dp"
                        android:text="@string/verified"
                        android:textSize="@dimen/text_size_very_very_small" />

                    <TextView
                        style="@style/TextViewStyle_no_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respond Request"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/text_size_very_very_small" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stuff_donated"
                android:textSize="@dimen/text_size_normal" />

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/container_stuff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50 Hospital Beds" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_funds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewStyle_no_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="-12dp"
                        android:text="@string/verified"
                        android:textSize="@dimen/text_size_very_very_small" />

                    <TextView
                        style="@style/TextViewStyle_no_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respond Request"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/text_size_very_very_small" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_impact"
                android:textSize="@dimen/text_size_normal" />

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:id="@+id/container_your_impact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 Charities/Causes impacted" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_lives_impacted"
                android:textSize="@dimen/text_size_normal" />

            <include layout="@layout/divider_grey" />

            <LinearLayout
                android:id="@+id/container_lives_impact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300 Children" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

